<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title: "
        android:id="@+id/textView5"
        android:layout_marginTop="35dp"
        android:onClick="showInputDialog"
        android:layout_below="@+id/imageView11"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Console: "
        android:id="@+id/textView9"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Release Date"
        android:id="@+id/textView10"
        android:onClick="editRelease"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Publisher:"
        android:id="@+id/textView11"
        android:onClick="editPublisher"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Critic Score: "
        android:id="@+id/textView12"
        android:onClick="editScore"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Players"
        android:id="@+id/textView13"
        android:onClick="editPlayers"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ESRB Rating: "
        android:id="@+id/textView14"
        android:onClick="editEsrb"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ESRB Descriptors"
        android:id="@+id/textView15"
        android:onClick="editEsrbDescriptors"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:onClick="closeInfoWindow" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorite"
        android:id="@+id/checkBox"
        android:layout_below="@+id/textView17"
        android:onClick="toggleFav"
        android:layout_alignEnd="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Launch Count:"
        android:id="@+id/textView16"
        android:onClick="editLaunchCount"
        android:layout_below="@+id/textView15"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description:"
        android:id="@+id/textView17"
        android:onClick="editDescription"
        android:layout_below="@+id/textView16"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:onClick="boxfrontFullscreen"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView3"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:onClick="boxbackFullscreen" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView4"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentEnd="true"
        android:onClick="screenshotFullscreen" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView5"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/button11"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button4"
        android:onClick="saveDatabase" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:id="@+id/button12"
        android:layout_alignTop="@+id/button11"
        android:layout_toEndOf="@+id/button11"
        android:onClick="refreshGameInfoButton" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="consoleFullscreen" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView8"
        android:layout_above="@+id/button18"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rescrape Game"
        android:id="@+id/button18"
        android:onClick="rescrapeSingleGame"
        android:layout_above="@+id/button4"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scrape Console"
        android:id="@+id/button19"
        android:onClick="rescrapeConsole"
        android:layout_alignTop="@+id/button18"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Img"
        android:id="@+id/button22"
        android:onClick="loadImagefromGallery"
        android:layout_above="@+id/button17"
        android:layout_alignStart="@+id/button17" />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="2dp"
        android:id="@+id/imageView11"
        android:onClick="consoleFullscreen"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Img"
        android:id="@+id/button17"
        android:onClick="deleteImage"
        android:layout_above="@+id/button19"
        android:layout_alignStart="@+id/button19"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Box Front"
        android:id="@+id/textView19"
        android:layout_above="@+id/textView9"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Box Back"
        android:id="@+id/textView20"
        android:layout_above="@+id/textView15"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Screenshot"
        android:id="@+id/textView21"
        android:layout_below="@+id/textView10"
        android:layout_alignParentEnd="true" />

</RelativeLayout>